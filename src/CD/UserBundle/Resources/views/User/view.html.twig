{% extends 'layout.html.twig' %}
{% block body %}
{{ parent() }}
<div class="container-fluid">
    <div class="col-md-9">
        <h2>{{ user.firstname }}, {{ user.lastname }}</h2>
    <br>
    <dl>
        <dt>{{ 'Username'|trans }}</dt>
            <dd>
                {{ user.username }}
            </dd>
            <br>
        
        <dt>{{ 'Firstname'|trans }}</dt>
            <dd>
                {{ user.firstname }}
            </dd>
            <br>
        
        <dt>{{ 'Lastname'|trans }}</dt>
            <dd>
                {{ user.lastname }}
            </dd>
            <br>
        
        <dt>{{ 'Email'|trans }}</dt>
            <dd>
                {{ user.email }}
            </dd>
            <br>
        
        <dt>{{ 'Role'|trans }}</dt>
            <dd>
                {% if user.rol == 'ROLE_ADMIN' %}
                 <strong>{{ 'Administrator'|trans }}</strong>
                 {% elseif user.rol == 'ROLE_USER' %}
                 <strong>{{ 'Username'|trans }}</strong>
                 {% endif%}
            </dd>
            <br>
        
        <dt>{{ 'Active'|trans }}</dt>
            <dd>
                {% if user.isActive == 1 %}
                    <span class="text-success">Enabled</span>
                {% elseif user.isActive == 0 %}
                    <span class="text-warning">Disabled</span>
                {% endif %}
            </dd>
            <br>
            
       
            
    </dl>
    </div>
    <div class="col-md-3">
        <h3>{{ 'Actions'|trans }}:</h3>
        <br>
        <p>
            <a href="{{ path('cd_user_edit', {id: user.id}) }}" class="btn btn-primary btn-lg btn-block">
                <i class="fa fa-edit"></i>
                {{ 'Edit user'|trans }}
            </a>
        </p>
        <br>
        
        
        <p>
            {{ include('CDUserBundle:User:forms/form.html.twig', {form: delete_form, message: 'Are you seru?'|trans }) }}
        </p>
    </div>
</div>

{% endblock %}